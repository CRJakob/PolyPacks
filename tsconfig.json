{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "outDir": "./",                  // Output to same structure
    "rootDir": "./",                 // Keep original paths
    "noEmitOnError": true,
    "allowJs": true
  },
  "include": ["PolyPack/**/*.ts"],
  "exclude": ["PolyPack/tempcode"]
}
